{
    "name": "Diviky/laravel-components",
    "description": "Blade components.",
    "keywords": [],
    "license": "MIT",
    "type": "library",
    "authors": [],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "diviky/code-analysis": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Diviky\\LaravelComponents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Diviky\\LaravelComponents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpro/grumphp": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Diviky\\LaravelComponents\\Support\\ServiceProvider"
            ]
        }
    }
}
